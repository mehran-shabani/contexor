{
  "$schema": "https://workal.dev/schema/v1.json",
  "name": "contexor",
  "projects": [
    {
      "name": "backend",
      "path": "backend",
      "language": "python",
      "tasks": {
        "install": "pip install -r requirements.txt",
        "migrate": "python manage.py migrate",
        "test": "pytest -q",
        "run": "python manage.py runserver 0.0.0.0:8000",
        "lint": "flake8 || echo 'flake8 not configured'"
      }
    },
    {
      "name": "frontend",
      "path": "frontend",
      "language": "node",
      "tasks": {
        "install": "npm ci || npm i",
        "build": "npm run build",
        "dev": "npm run dev",
        "test": "npm test --if-present",
        "lint": "npm run lint --if-present"
      }
    },
    {
      "name": "compose",
      "path": ".",
      "tasks": {
        "up": "docker compose up -d",
        "down": "docker compose down",
        "logs": "docker compose logs -f --tail=200",
        "rebuild": "docker compose build --no-cache"
      }
    }
  ],
  "workflows": {
    "dev:all": [
      "compose.up",
      "backend.install",
      "frontend.install"
    ],
    "test:all": [
      "backend.test",
      "frontend.test"
    ]
  }
}
